{{ define "title" }}Login{{ end }}

{{ define "content" }}
<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
  <h1 class="text-2xl font-bold mb-6">Login</h1>

  <form action="/login/submit" method="POST" novalidate class="space-y-4">
    {{ .csrfField }}

    <div>
      <label class="block font-semibold mb-1">Email:</label>
      <input type="email" name="email" value="{{ .Email }}" class="w-full border border-gray-300 rounded px-3 py-2">
      {{ with .Errors.email }}<div class="text-red-600 text-sm mt-1">{{ . }}</div>{{ end }}
    </div>

    <div>
      <label class="block font-semibold mb-1">Password:</label>
      <input type="password" name="password" class="w-full border border-gray-300 rounded px-3 py-2">
      {{ with .Errors.password }}<div class="text-red-600 text-sm mt-1">{{ . }}</div>{{ end }}
    </div>

    {{ if .Error }}
      <div class="bg-red-100 text-red-700 p-3 rounded">{{ .Error }}</div>
    {{ end }}

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Login</button>
  </form>

  <p class="mt-4 text-sm">Don't have an account? <a href="/signup" class="text-blue-600 hover:underline">Sign up here</a></p>
</div>
{{ end }}
