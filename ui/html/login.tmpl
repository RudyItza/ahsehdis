{{define "title"}}Login{{end}}

{{define "content"}}
<div class="form-container">
    <h1>Login</h1>
    
    <form action="/login/submit" method="POST" novalidate>
        {{.csrfField}}
        
        <div class="form-group">
            <label>Email:</label>
            <input type="email" name="email" value="{{.Email}}" class="form-control">
            {{with .Errors.email}}<div class="error text-danger">{{.}}</div>{{end}}
        </div>
        
        <div class="form-group">
            <label>Password:</label>
            <input type="password" name="password" class="form-control">
            {{with .Errors.password}}<div class="error text-danger">{{.}}</div>{{end}}
        </div>
        
        {{if .Error}}
            <div class="error alert alert-danger">{{.Error}}</div>
        {{end}}
        
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
    
    <p class="mt-3">Don't have an account? <a href="/signup">Sign up here</a></p>
</div>
{{end}}