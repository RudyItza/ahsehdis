{{ define "title" }}Sign Up{{ end }}

{{ define "content" }}
<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
  <h2 class="text-2xl font-bold mb-6">Sign Up</h2>

  <form action="/signup/submit" method="POST" novalidate class="space-y-4">
    {{ .csrfField }}

    <div>
      <label class="block font-semibold mb-1">Email:</label>
      <input type="email" name="email" value="{{ .Email }}" required class="w-full border border-gray-300 rounded px-3 py-2">
      {{ with .Errors.email }}<div class="text-red-600 text-sm mt-1">{{ . }}</div>{{ end }}
    </div>

    <div>
      <label class="block font-semibold mb-1">Password:</label>
      <input type="password" name="password" required class="w-full border border-gray-300 rounded px-3 py-2">
      {{ with .Errors.password }}<div class="text-red-600 text-sm mt-1">{{ . }}</div>{{ end }}
    </div>

    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Sign Up</button>
  </form>
</div>
{{ end }}
