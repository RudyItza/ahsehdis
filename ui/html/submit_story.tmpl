{{ define "title" }}Submit Story{{ end }}

{{ define "content" }}
<div class="max-w-lg mx-auto bg-white p-6 rounded shadow">
  <h1 class="text-2xl font-bold mb-6">Submit New Story</h1>

  <form action="/story/create" method="POST" class="space-y-4">
    {{ .csrfField }}

    <div>
      <label class="block font-semibold mb-1">Title:</label>
      <input type="text" name="title" value="{{ .Title }}" class="w-full border border-gray-300 rounded px-3 py-2">
      {{ with .Errors.title }}<div class="text-red-600 text-sm mt-1">{{ . }}</div>{{ end }}
    </div>

    <div>
      <label class="block font-semibold mb-1">Content:</label>
      <textarea name="content" class="w-full border border-gray-300 rounded px-3 py-2 h-40">{{ .Content }}</textarea>
      {{ with .Errors.content }}<div class="text-red-600 text-sm mt-1">{{ . }}</div>{{ end }}
    </div>

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Submit Story</button>
  </form>
</div>
{{ end }}
